<h1>Edit Form</h1>

<%= form_for @user, url: {action: 'update'} do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div class="field">
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    </div>
    <div class="actions">
        <%= form.submit 'Update' %>
    </div>
<% end %>
<%= link_to 'Back', '/users' %>
