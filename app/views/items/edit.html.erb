<h1>Edit Form</h1>

<%= form_with(model: @item, url: "/items/#{@item.id}", method: "patch", local: true) do |f| %>
    <div class="field">
        <%= f.label :key %>
        <%= f.text_field :key %>
    </div>
    <div class="field">
        <%= f.label :value %>
        <%= f.text_field :value %>
    </div>
    <div class="field">
        <%= f.label :visible %>
        <%= f.check_box :visible %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
<%= link_to 'Back', '/items' %>
