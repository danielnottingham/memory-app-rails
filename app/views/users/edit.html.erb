<h1>Edit Form</h1>

<%= form_with(url: "/users/#{@user.id}", method: "patch") do %>
    <div class="field">
        <%= label_tag(:name) %>
        <%= text_field_tag(:name) %>
    </div>
    <div class="field">
        <%= label_tag(:phone) %>
        <%= text_field_tag(:phone) %>
    </div>
    <div class="actions">
        <%= submit_tag('Update') %>
    </div>
<% end %>
<%= link_to 'Back', '/users' %>
